<%= form_tag posts_path, :method => 'POST', :multipart => true, :class => 'form-horizontal' do %>
 	<%= label_tag 'Pick a topic: '%>
 	<%= select_tag :subject, options_for_select(["food", "drink"])%><br />
 	<%= label_tag 'Content :'%>
 	<%= text_area_tag :content, nil, { :rows => 10, :cols => 200, :resize => false } %><br />

	<% if @user_agent.match('ipad').nil? || @user_agent.match('iphone').nil? %>
		<%= label_tag 'Upload a pic. why don\'t we:'%>
 		<%= file_field_tag :image %><br />
	<% end %>
 	<%= label_tag 'Post to Twitter?:'%>
 	<%= check_box_tag :tweet %>
 	<%= hidden_field_tag :restaurant_id, current_restaurant.id %><br />
 	<%= submit_tag 'Post!'%>
<% end %>


