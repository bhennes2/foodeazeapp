<h1><%= @customer.name %></h1>

<p>Your current wait is: <input type="text" id="wait-<%= @customer.appointments.last.id %>" value="<%= wait_time_left(@customer.appointments.last.created_at, @customer.appointments.last.wait) %>" > at <%= @restaurant.name %></p>

<p><strong>Food: </strong><%= @restaurant.foods.last.content %></p>
<p><strong>Drink: </strong><%= @restaurant.drinks.last.content %></p>

<p>See what's <%= link_to "nearby", customer_path %> while you wait </p>

<script>

var wait = { 
	"id" : "wait-<%= @customer.appointments.last.id %>",
	"wait" : "<%= wait_time_left(@customer.appointments.last.created_at, @customer.appointments.last.wait) %>"
};

change_time();

function change_time(){
	if (wait["wait"] != "0"){
	 			countdown(wait["wait"]);
				setTimeout(change_time, 1000);
	}
	else if (wait["wait"] == "0"){
	 			alert("Your table is ready!");
	}
	
};

